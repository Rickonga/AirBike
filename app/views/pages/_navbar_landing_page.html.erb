<nav class="d-flex fixed-top" id="custom-navbar"=>
  <ul class="list-group list-group-horizontal flex-grow-1">
    <li class="nav-item custom-list" id="custom-navbar">
      <%= link_to bikes_path, class: "d-flex w-100 justify-content-center align-items-center" do %>
        <%= image_tag "bike_default.png", width: 50, height: 50, class: "mx-2 margin-bottom: 0.0rem" %>
        <h1 class="mx-2">AirBike</h1>
      <% end %>
    </li>
  </ul>
  <ul class="list-group list-group-horizontal">
    <li class="custom-list" id="custom-navbar">
      <% if user_signed_in? %>
        <li class="nav-item dropdown custom-list">
          <% if current_user.photo.attached? %>
            <%= cl_image_tag(current_user.photo.key, width: 56, height: 56, crop: :thumb, gravity: :face, class: "avatar-large dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false)%>
          <% else %>
            <%= image_tag "user_image.png" , class: "default-avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Add a bike", new_bike_path, class: "dropdown-item" %>
          <%= link_to "See my bikes", mybikes_path, class: "dropdown-item" %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item custom-list">
          <%= link_to "Login", new_user_session_path, class: "nav-link navbar-button" %>
        </li>
      <% end %>
    </li>
  </ul>
</nav>
