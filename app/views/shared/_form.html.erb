<!-- app/views/articles/_form.html.erb -->
<%= simple_form_for(@bike) do |f| %>
  <%= f.input :model %>
  <%= f.input :brand %>
  <%= f.input :description %>
  <%= f.input :address %>
  <%= f.input :price %>
  <%= f.association :category %>
  <%= f.input :photo, as: :file %>
  <%= f.submit %>
<% end %>
