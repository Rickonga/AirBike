<!-- app/views/articles/_form.html.erb -->
<%= simple_form_for(@bike) do |f| %>
  <%= f.input :model, input_html: { placeholder: "Bergamont E-Horizon Edition Model 2020" } %>
  <%= f.input :brand, input_html: { placeholder: "Focus" } %>
  <%= f.input :description,as: :text, input_html: { placeholder: "Write a short description of your bike" } %>
  <%= f.input :address, input_html: { placeholder: "Musterstr. 5, 10115 Berlin, Germany" } %>
  <%= f.input :price, input_html: { placeholder: "100" } %>
  <%= f.association :category, input_html: { placeholder: "Select category" } %>
  <%= f.input :photo, as: :file %>
  <%= f.submit %>
<% end %>
