<!-- app/views/articles/_form.html.erb -->
<%= simple_form_for(@bike) do |f| %>
  <%= f.input :model, input_html: { placeholder: "Max Mustermann" } %>
  <%= f.input :brand, input_html: { placeholder: "Focus" } %>
  <%= f.input :description,as: :text %>
  <%= f.input :address, input_html: { placeholder: "some City" } %>
  <%= f.input :price, input_html: { placeholder: "unpaiable" } %>
  <%= f.association :category, input_html: { placeholder: "Select category" } %>
  <%= f.input :photo, as: :file %>
  <%= f.submit %>
<% end %>
