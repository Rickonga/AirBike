<aside class="sidebar py-3">
  <div class="mb-4">
    <%= link_to root_path, class: "d-flex w-100 justify-content-center align-items-center" do %>
      <%= image_tag "bike_default.png", width: 50, height: 50, class: "mx-2 margin-bottom: 0.0rem" %>
      <h1 class="mx-2">AirBike</h1>
    <% end %>
  </div>
  <% if user_signed_in? %>
    <div class="d-flex w-100 my-4 justify-content-center align-items-center">

      <div class="nav-item dropdown">
        <% if current_user.photo.attached? %>
          <%= cl_image_tag(current_user.photo.key, width: 40, height: 40, crop: :thumb, gravity: :face, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false)%>
        <% else %>
          <%= image_tag "user_image.png" , class: "default-avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% end %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Add a bike", new_bike_path, class: "dropdown-item" %>
          <%= link_to "See my bikes", "#", class: "dropdown-item" %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </div>
    </div>
    <div class="btn-sidebar d-flex w-100 my-1 flex-column align-items-center justify-content-center">
      <%= link_to "Dashboard bookings", "#" %>
    </div>
  <% end %>
  <div class="btn-sidebar d-flex w-100 flex-column align-items-center justify-content-center">
    <div class="my-1">
      <%= link_to "All bikes", "#" %>
    </div class="py-3">
    <% if !user_signed_in? %>
      <div class="py=3">
        <%= link_to "Login", new_user_session_path %>
      </div>
    <% end %>
  </div>
</aside>
